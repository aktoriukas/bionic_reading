{
  "manifest_version": 3,
  "name": "Bionic Reading",
  "version": "1.0.0",
  "description": "Make your reading experience more comfortable",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "background": {
    "service_worker": "src/bg.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*/*"],
  "action": {
    "default_popup": "src/popup.html"
  }
}
